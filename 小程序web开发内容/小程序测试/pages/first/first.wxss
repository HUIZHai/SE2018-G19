/*mask*/
  .drawer_screen { 
  width: 20%; 
  height: 100%; 
  position: absolute; 
  top: 0; 
  left: 0; 
  z-index: 1000; /* 层次 */
  opacity: 0.2;  /* 不透明度 */
  overflow: visible;    /*   当内容溢出元素框时发生的事情*/
} 
/*content*/
  .drawer_attr_box { 
  width:70rpx; 
  overflow: visible; 
  position: absolute; 
  bottom: 0; 
  left: 0; /* 左边缘设置在其包含元素左边缘向右xx像素的位置 */
  z-index: 1001; 
  background: #52A287; 
} 
.drawer_content { 
  padding: 10rpx 25rpx 0rpx 25rpx;  /* 内边框 */
  height: 600rpx; 
  overflow-y: visible;  
  /* 裁剪 div 元素中内容的左/右边缘如果溢出元素的内容区域的话 */
  margin: 0rpx 0rpx 0rpx 5rpx  /* 外边框 上右下左 */
} 
.drawer_title{
  padding: 40rpx 0rpx 0rpx 0rpx ;
  /* font:42rpx "microsoft yahei";  设置字体大小属性  */
  text-align: left; /* 文本对齐方式 */
